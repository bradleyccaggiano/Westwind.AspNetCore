@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}
@section headers
{ 

    <style>
        .hero-text {
            text-align: center;
            line-height: 1.8em;
            font-size: 3.2em;
            padding: 30px 0 50px;
            background: black;
            color: white;
            font-weight: 600;
        }
        .text-primary {
            font-weight: bold !important;
            color: khaki;
        }
    </style>
}

<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            @*<img src="~/images/AspnetCoreMarkdownBanner.jpg" alt="Markdown Monster" class="img-responsive" />*@
            <a href="/markdown" style="text-decoration: none;" alt="click to see the TagHelper samples">
                <div class="hero-text">
                    <p class="text-primary">Markdown 'Islands' via TagHelper Control</p>
                    <p>Embed static text, Model data or files</p>
                    <p>Easy Markdown Parsing</p>                    
                </div>
            </a>
        </div>
        <div class="item">
            @*<img src="~/images/AspnetCoreMarkdownBanner.jpg" alt="Markdown Monster" class="img-responsive" />*@
            <a href="/posts/2018/03/23/MarkdownTagHelper" style="text-decoration: none;" alt="click to see a page directly rendered from Markdown file on disk">
                <div class="hero-text">
                    <p class="text-primary">Markdown Page Handler</p>
                    <p>render Markdown pages in your site</p>
                    <p>drop files and access .md or extensionless Url</p>
                </div>
            </a>
        </div>


        <div class="item">
            <a href="https://markdownMonster.west-wind.com">
                <img src="~/images/MarkdownMonster_wide.jpg" alt="Markdown Monster" class="img-responsive" />
            </a>

        </div>
    </div>

        <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>


