@page
@model MarkdownControlModel
@using Westwind.AspNetCore.Markdown
@{
    ViewBag.Title = "Markdown TagHelper";
}
@section Headers {
    <style>
        .header {
            margin-top: 50px;
            padding-bottom: 10px;
            border-bottom: 1px solid #eee;
        }
        .sample-block {
            margin-left: 25px;
            margin-top: 10px;
            padding: 15px 15px 15px 15px;
            background: #f2f2f2;
            border-radius: 6px;
        }
        /* vs2015 theme specific*/
        pre {
            background: #1E1E1E;
            color: #eee;
            padding: 0.7em !important;
            overflow-x: auto;
            white-space: pre;
            word-break: normal;
            word-wrap: normal;
        }

            pre > code {
                white-space: pre;
            }
    </style>
}

<h1>Markdown Parsing with the Markdown Class</h1>
  

    <h3 class="header">Markdown Parsing in Razor HTML  with @@Markdown.ParseHtmlString()</h3>


    <div class="sample-block">
        @Markdown.ParseHtmlString("This is **Markdown Text** using the `@Markdown.ParseHtmlString()` method.")
    </div>



    <h3 class="header">Markdown Parsing in code with Markdown.Parse()</h3>
    <div class="sample-block">
        <markdown>
            ##### Parse Html in Code:
            ```cs
            var html = Markdown.Parse("This is **Markdown** Text.")
            ```
        </markdown>
    </div>


    <h3 class="header">Markdown TagHelper with File Loaded Markdown</h3>
    <p>
        This example uses <code>&lt;markdown Filename="~/MarkdownPartialPage.md">&lt;/markdown></code> to render
        Markdown from a file into the current page.
    </p>

    <div class="sample-block">
        <markdown Filename="~/MarkdownPartialPage.md"></markdown>
    </div>


    <h3 class="header">Markdown.ParseHtmlFromFile()</h3>
    <p>
        And one more time with the same content as above using <code>Markdown.ParseHtmlStringFromFile()</code>:
    </p>

    <div class="sample-block">
        @Markdown.ParseHtmlStringFromFile("~/MarkdownPartialPage.md")
    </div>
    
</div>
@section Scripts {
    <script src="~/lib/highlightjs/highlight.pack.js"></script>
    <link href="~/lib/highlightjs/styles/vs2015.css" rel="stylesheet" />
    <script>
                setTimeout(function () {
                    var pres = document.querySelectorAll("pre>code");
                    for (var i = 0; i < pres.length; i++) {
                        hljs.highlightBlock(pres[i]);
                    }
                });

    </script>
}